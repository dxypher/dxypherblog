.span9
  %h3
    Viewing
    %i.icon-caret-right
    = "#{@title ||= "All"} articles"
  %ul.articles-list
    - @articles.each do |article|
      %article
        %header
          %h2.article-title= link_to article.title, article_path(article)
          %p.date-posted
            %i.icon-calendar
            = (article.created_at).strftime("%B %d, %Y")
        .article-content= truncate(article.content, length: 500).html_safe
        %p.full-article-link
          = link_to 'Read Full Article', article_path(article)
          |
          %i.icon-comment
          = pluralize(article.comments_count, "Comment")
      %hr


  = paginate @articles, :theme => 'twitter-bootstrap'